{{! Custom pagination for Earmarked }}

<nav class="pagination" role="pagination">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-angle-left"></i></a>
    {{/if}}
   <span class="page-number">Page {{page}} of {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}"><i class="fa fa-angle-right"></i></a>
    {{/if}}
</nav>
